@{
    ViewBag.Title = "EditProduct";
}
@model Orders.Models.Product
@using (Html.BeginForm("EditProduct", "Product"))
{
    <fieldset>
        <legend>Edit product</legend>
        <input style="display:none" type="text" name="Id" value="@Model.Id"/>
        @Html.Label("Name:") <br>
        @Html.TextBox("Name")
        <hr />
        @Html.Label("Description:") <br>
        @Html.TextBox("Description")
        <hr />
        @Html.Label("Price:") <br>
        @Html.TextBox("Price")
        <hr />
        <input type="submit" value="Edit" />
    </fieldset>
}